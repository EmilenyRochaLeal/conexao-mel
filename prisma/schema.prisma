generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Criar uma nova migrate: npx prisma migrate dev
// Resetar dados do banco : npx prisma migrate reset

model User {
  id        String      @id @default(uuid())
  name      String      @db.VarChar(100)
  email     String      @unique @db.VarChar(100)
  role      UserType
  password  String      @db.VarChar(255)
  createdAt DateTime    @default(now())
  telefone  String      @default("")
  avaliacao Avaliacao[]
  pedidos   Pedido[]    @relation("CompradorPedido")
  produtos  Produto[]   @relation("VendedorProduto")

  @@index([role])
  @@index([createdAt])
}

model Produto {
  id         String      @id @default(uuid())
  name       String      @db.VarChar(100)
  preco      Decimal     @db.Decimal(10, 2)
  descricao  String      @db.VarChar(500)
  imagemName String?
  role       Roledemel
  vendedorId String
  estoque    Decimal     @db.Decimal(10, 2)
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt
  avaliacoes Avaliacao[]
  pedidos    Pedido[]
  vendedor   User        @relation("VendedorProduto", fields: [vendedorId], references: [id])

  @@index([preco])
  @@index([role])
}

model Pedido {
  id          String @id @default(uuid())
  compradorId String
  estado      PedidoEstado
  totalPrice  Decimal      @db.Decimal(10, 2)
  produtoId   String
  quantidade  Decimal      @db.Decimal(10, 2)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  comprador   User         @relation("CompradorPedido", fields: [compradorId], references: [id])
  produto     Produto      @relation(fields: [produtoId], references: [id])
}

model Avaliacao {
  id          String @id @default(uuid())
  produtoId   String
  compradorId String
  avaliacao   Int
  descricao   String
  comprador   User    @relation(fields: [compradorId], references: [id])
  produto     Produto @relation(fields: [produtoId], references: [id])
}

enum UserType {
  VENDEDOR
  COMPRADOR
}

enum Roledemel {
  Cajueiro
  Aroeira
  Eucalipto
  Laranjeira
  Marmeleiro
  Silvestre
}

enum PedidoEstado {
  ANDAMENTO
  CANCELADO
  PRONTO
}
